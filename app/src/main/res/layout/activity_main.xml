<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_date_picker_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_border_text_view"
            android:text="@string/get_date_picker_button_text"
            android:gravity="center"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/get_date_picker_button"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_border_text_view"
            android:text="@string/get_map_text"
            android:gravity="center"
            android:layout_below="@id/date_text_view"/>

        <TextView
            android:id="@+id/latitude_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/get_map_button"/>

        <TextView
            android:id="@+id/longitude_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/latitude_text_view"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculate_moon_position_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_border_text_view"
            android:text="@string/calculate_moon_position_button_text"
            android:gravity="center"
            android:layout_below="@id/longitude_text_view"/>


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/divider_color"
        android:gravity="center"
        android:layout_below="@id/calculate_moon_position_button"/>

    <TextView
        android:id="@+id/solar_noon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/solar_transit_text_view"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/divider1"/>

    <TextView
        android:id="@+id/solar_noon_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/empty_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/solar_noon_text"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/divider_color"
        android:layout_below="@id/solar_noon_text_view"/>

    <TextView
        android:id="@+id/moon_rise_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/moon_rise_text_view"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/divider2"/>

    <TextView
        android:id="@+id/moon_rise_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/empty_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/moon_rise_text"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_below="@id/moon_rise_text_view"/>

    <TextView
        android:id="@+id/moon_transit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/moon_transit_text_view"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/divider3"/>

    <TextView
        android:id="@+id/moon_transit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/empty_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/moon_transit_text"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_below="@id/moon_transit_text_view"/>

    <TextView
        android:id="@+id/moon_set_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/moon_set_text_view"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/divider4"/>

    <TextView
        android:id="@+id/moon_set_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/empty_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/moon_set_text"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_below="@id/moon_set_text_view"/>

</RelativeLayout>
